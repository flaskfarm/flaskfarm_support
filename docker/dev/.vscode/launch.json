    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "/data/config.yaml"
            ]
        },
        {
            "name": "Python: Celery",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "-A",
                "main.celery",
                "worker",
                "-l",
                "info",
                "-P",
                "gevent",
                "--config_filepath=/data/config.yaml",
                "--running_type=docker",
            ],
        }
    ]
}